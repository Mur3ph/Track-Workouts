<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="PxUsage" >

    <com.google.android.maps.MapView
        android:id="@+id/mapViewMain3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:apiKey="0yKaUZSnqCYV7GUYXBVZiYMQ2YU0IiefDJgqPcw"
        android:clickable="true"
        android:enabled="true" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0px" >

        <Button
            android:id="@+id/btnStartMapRoute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_weight="1.0"
            android:text="@string/start_map"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnStopMapRoute"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/stop_map"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtTimerMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/zeros"
            android:textColor="#F6358A"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/txtMeasureDistanceMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="@string/distance"
            android:textColor="#F6358A"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="@string/distanceKm"
            android:textColor="#F6358A"
            android:textSize="30sp" />
    </LinearLayout>

</FrameLayout>